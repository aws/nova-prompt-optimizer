@app.post("/optimization/start")
async def optimization_start_submit(request):
    """Handle optimization start submission"""
    print("ðŸ” DEBUG: POST /optimization/start route hit!")
    
    try:
        form = await request.form()
        print(f"ðŸ” DEBUG: Form data received: {dict(form)}")
        
        # Get form data
        name = form.get("name", "")
        prompt_id = form.get("prompt_id", "")
        dataset_id = form.get("dataset_id", "")
        max_records = form.get("max_records", "100")
        rate_limit = form.get("rate_limit", "60")
        algorithm = form.get("algorithm", "nova_optimizer")
        description = form.get("description", "")
        
        print(f"ðŸ” DEBUG: Parsed data - name: {name}, prompt_id: {prompt_id}, dataset_id: {dataset_id}")
        print(f"ðŸ” DEBUG: Current optimizations count before: {len(optimization_runs)}")
        
    except Exception as e:
        print(f"âŒ DEBUG: Error processing form: {e}")
        raise
    
    # Simple validation
    if not name or not prompt_id or not dataset_id:
        print("âŒ DEBUG: Validation failed")
        # Check if this is from modal
        referer = request.headers.get("referer", "")
